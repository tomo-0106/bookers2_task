<div class="container">
  <div class="row">
    <div class="col-xs-10">


      	<table class="table table-hover table-inverse">

      		<% if @model == "user" %>
      			<h2>Users search for "<%= @content %>"</h2>
      		<thead>

      			<tr>
						    <th></th>
							<th>name</th>
						</tr>
					</thead>
           <% @datas.each do |data| %>
					<tbody>
						<tr>
							<td><%= attachment_image_tag(data, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
							<td><%= data.name %></td>
						</tr>

					</tbody>
					<% end %>
      		<% else %>
      			<h2>Books search for "<%= @content %>"</h2>

					<thead>
						<tr>
						    <th></th>
							<th>title</th>
							<th>opinion</th>
						</tr>
					</thead>
           <% @datas.each do |data| %>

					<tbody>

						<tr>
							<td><%= attachment_image_tag(data.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
							<td><%= data.title %></td>
							<td><%= data.body %></td>
						</tr>

					</tbody>
					<% end %>
					<% end %>
		</table>


    </div>
  </div>
</div>