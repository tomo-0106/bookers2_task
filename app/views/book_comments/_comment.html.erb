<table class="table table-hover table-inverse"  id="<%= "comment-#{@book.id}" %>">
  <thead>
  	<tr>
  		<th></th>
  		<th></th>
  		<th></th>
  	</tr>
  </thead>
<tbody>
	<% book.book_comments.each do |book_comment| %>
	<tr>
		<td>
			<%= link_to user_path(book.user) do %>
				<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
				<%= book_comment.user.name %>
			<% end %>
		</td>
		<td><%= book_comment.created_at.strftime('%Y/%m/%d') %> <%= book_comment.comment %></td>
			<% if book_comment.user == current_user %>
		<td><%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, remote: true %></td>
		<% end %>
	</tr>
	<% end %>
</tbody>
</table>