<table class="table">
	<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th>name</th>
		<th><%= current_user.name %></th>
	</tr>
	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
	<tr>
		<th>follows</th>
		<th><%= link_to follows_path(user_id: user) do %><%= user.follower.count %><% end %></th>
	</tr>
	<tr>
		<th>followers</th>
			<th>
				<%= link_to followers_path(user_id: user) do %><%= user.followed.count %><% end %></th>
	</tr>


</table>

<div class="row">
	<%= link_to '', edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>